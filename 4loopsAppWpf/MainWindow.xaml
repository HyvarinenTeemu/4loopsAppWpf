        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="239" Margin="10,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <Label x:Name="label" Content="Tekstiä parsittu:" HorizontalAlignment="Left" Margin="20,93,0,0" VerticalAlignment="Top" Width="94" Height="33"/>
        <Label x:Name="label1" Content="Aika                 :" HorizontalAlignment="Left" Margin="20,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.075,0.237" Width="94"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="138,98,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="145"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="138,131,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="145"/>

